package pack01_if;

public class ex_01_if {public static void main(String[] args) {//{} <= 프로그램의 시작점
	// if문 : 제어문 중에 조건문이다.
	// 어떤 조건을 주고 해당 조건이 TRUE일 대의 지역(블럭킹{})을 만들고 그 지역의 코드를 실행한다.
	// 이항연산자부분은 값만 결과로 사용 가능. => if 문은 별도의 코딩을 결과로써 사용이 가능하다
	//if (조건식※ T와 F의 결과만 얻을 수 있는 것※ {
	// 조건식이 TRUE 일 때 시작하는 부분.
	//} 
	
	int score = 93; //웹에서 입력받아온 ID와 PW비교할 때 사용함
	if(score >=90){
		// 조건식이 T 일때만 사용 가능
		System.out.println("점수가 90보다 큽니다.");
		System.out.println("등급은 A등급 입니다.");
	}
	System.out.println("여기까지 왔을까요?");
	// score %2<== 어떤 수를 나누고나서 나머지가 나옴. 숫자값 !=boolean
	//score 라는 변수에 있는 값을 2로 나누고 나서 나머지가 1과 같습니까? T/F
	// socre % 2 =? => 나머지 이기 때문에 홀짝 구분 x 
	//socre 의 숫자가 홀수인지 짝수인지를 판단해서 (if문) 결과 출력하게 코딩하기
	
	int scooe = 99;
	if(score %2 == 0) {
		System.out.println("socre는 짝수");}
if(score%2 == 1) {
	System.out.println("socre는 홀수");
	
}
	}// 프로그램의 끝점
	
}
