package pack01_if;

public class Ex02_IfElse {
public static void main(String[] args) {
	// if문 : 단순 if (조건식을 주고 해당하는 조건식이 T인경우 블럭킹(지역{})을 만들어 코드 실행)
	// If-else 문 : 단순 if 문은 조건식이 TRUE일대만 실행이 되는 번거러움이 있음. 
	//if의 조건식이 T가 아닌 F라면 else 라는 키워드를 if 문 뒤에 붙여서 False 실행부를 만드는 것.
	
	int score = 85;
	if(score%2 == 0) {
		//T
		System.out.println("짝수");
	}else { //문법자체가 if문이 T가 안나왔을 때 사용하기 때문에 if문이 반드시 있을때만 사용가능//Flase
		System.out.println("홀수");
	}
	//int 형 변수 num1과 num2를 나열을 통해 초기화 하기 값은 자유롭게 할당
	//if-else문을 통해 두 수를 비교하고 어떤 수가 큰지 콘솔창에 출력하게 코딩하기
	
	int num1 = 1, num2 = 2;
	if (num1 < num2) {
System.out.println("작다");		
	} else {
		System.out.println("크다");
	

	}
	
	
	
	
	
	//if(score%2==1) {
	//	System.out.println("홀수");
	//}
	
	



























}// main
}//class
